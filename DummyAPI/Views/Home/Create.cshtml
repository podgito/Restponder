@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div ng-controller="CreateServiceController">
    <div class="row">
        <div class="col-md-8">
            <form role="form">

                <div class="form-group">
                    <label for="responseBody">
                        Enter the response body for your web service.
                    </label>
                    <textarea id="responseBody" ng-model="service.responseBody" rows="10" class="form-control responseBody" placeholder="Enter response data..."></textarea>
                </div>

                <button type="button" ng-click="createService(service)" class="btn btn-primary">Create</button>
                <button type="button" ng-click="clearService(service)" class="btn btn-default">Clear</button>
                <br />


            </form>
            <form class="form-inline" role="form">
                <h3>Generated Url</h3>
                <div class="form-group">

                    <input id="serviceUrl" ng-model="service.url" type="text" class="form-control" placeholder="Click create above..." readonly>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-info" title="copy to clipboard"><span class="glyphicon glyphicon-share"></span></button>
                </div>
            </form>


        </div>

    </div>

</div>

@section scripts
{

    <script src="~/Scripts/app/Controllers/CreateServiceController.js"></script>
}